@model IEnumerable<LojaDeCarros.Models.Carro>

<h1>Lista de Carros</h1>

<a asp-action="Create" class="btn btn-success">Cadastrar Carro</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Modelo</th>
            <th>Preço</th>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var carro in Model)
        {
            <tr>
                <td>@carro.Id</td>
                <td>@carro.Modelo</td>
                <td>@carro.Preco.ToString("C")</td>
                <td><a asp-action="Edit" asp-route-id="@carro.Id">Editar</a><a asp-action="Delete" class="btn btn-danger" asp-route-id="@carro.Id">Remover</a></td>
            </tr>
        }
    </tbody>
</table>
